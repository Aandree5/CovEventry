<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="100dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dr_event_background"
    android:padding="20dp">

    <g3.coveventry.customviews.CovImageView
        android:id="@+id/eventlistitem_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/dr_image_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholder="@drawable/ic_event_placeholder"
        app:round="false" />

    <TextView
        android:id="@+id/eventlistitem_host_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Host name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/eventlistitem_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventlistitem_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@id/eventlistitem_image"
        app:layout_constraintStart_toStartOf="@id/eventlistitem_host_name"
        app:layout_constraintTop_toBottomOf="@id/eventlistitem_host_name" />

    <TextView
        android:id="@+id/eventlistitem_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintEnd_toStartOf="@id/eventlistitem_image"
        app:layout_constraintStart_toStartOf="@id/eventlistitem_description"
        app:layout_constraintTop_toBottomOf="@id/eventlistitem_description" />


</android.support.constraint.ConstraintLayout>